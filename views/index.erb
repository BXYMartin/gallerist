<div class="list-group">
  <a class="link list-group-item" href="/photos">
    <i class="fa fa-fw fa-th"></i> All photos
  </a>
  <a class="link list-group-item" href="/favorites">
    <i class="fa fa-fw fa-heart"></i> Favorites
  </a>
  <a class="link list-group-item" href="/movies">
    <i class="fa fa-fw fa-film"></i> Movies
  </a>
  <a class="link list-group-item" href="/tags">
    <i class="fa fa-fw fa-tags"></i> Tags
  </a>
  <a class="link list-group-item" href="/persons">
    <i class="fa fa-fw fa-users"></i> Persons
  </a>
</div>

<h2><i class="fa fa-fw fa-folder-o"></i> Albums</h2>

<div class="row">
  <% @albums.regular.each do |album| %>
    <%= partial :key_photo, locals: { album: album } %>
  <% end %>
</div>

<div class="clearfix"></div>

<h2><i class="fa fa-fw fa-calendar-o"></i> Projects</h2>

<div class="row">
  <% @albums.projects.each do |project| %>
    <%= partial :key_photo, locals: { album: project } %>
  <% end %>
</div>

<div class="clearfix"></div>

<h2><i class="fa fa-fw fa-tags"></i> Tags</h2>

<h3>
  <%= @tags.map { |tag| widget_for tag }.join %>
</h3>

<h2><i class="fa fa-fw fa-users"></i> Persons</h2>

<h3>
  <%= @persons.map { |person| widget_for person }.join %>
</h3>
