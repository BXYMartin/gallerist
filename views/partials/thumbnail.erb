  <div style="pointer-events: none;transition: all 1s ease-in-out;" class="thumbnail-wrapper scale-on-hover">
      <a style="display: block;pointer-events: all;transition: all 1s ease-in-out 0s;" href="<%= url_for(photo) %>" class="thumbnail photo<% if @current == photo.id%> current<% end %>"
         data-id="<%= photo.id %>"
         data-meta='<%= photo.metadata.to_json %>'
         data-type="<%= photo.video? ? 'video' : 'image' %>"></a>

     <img class="img_wrap" style="position: absolute;top: 0;width: 100%;vertical-align: bottom;" data-layzr="/thumbs/<%= photo.id %>">
     <% if photo.is_favorite? && request.path != '/favorites' %>
       <span style="
          position: absolute;
          bottom: 0;
          right: 8px;
          display: block;
          font-size: 10%;
        ">❤️</span>
     <% end %>
     <% if photo.video? && request.path != '/movies' %>
       <span style="
          position: absolute;
          bottom: 0;
          right: 8px;
          display: block;
          font-size: 10%;
        ">🎞</span>
     <% end %>
  </div>

